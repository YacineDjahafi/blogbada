{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="registerForm">
		<h1>S'inscrire</h1>
		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.username) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.plainPassword) }}

		<button type="submit" class="btn btn-primary">Valider</button>
		{{ form_end(registrationForm) }}
	</div>
	<img class="imgLock" src="https://img.freepik.com/vecteurs-libre/serrure-dessine-main-cle_53876-15747.jpg?w=826&t=st=1697408425~exp=1697409025~hmac=b89f9ae33482e2fc389edfb4cc694ae0f3f2462f0010f1ebfe60e2e379b6ebce" alt="">
{% endblock %}
