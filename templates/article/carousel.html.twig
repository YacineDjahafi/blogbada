{# SUR PAGE D'ACCUEIL #}


    {% if article.featuredImage %}
    <a class="posterContainer" href="{{ path('article_show', { 'slug': article.slug }) }}">
        <img src="/uploads/{{ article.featuredImage.filename }}" 
        alt="{{ article.featuredImage.altText }}" 
        loading="lazy" width="200" height="180" >
    </a>
    <div class="hover">
        <h2 class="featuredText hover">
            <a href="{{ path('article_show', { 'slug': article.slug }) }}">
                {{article.title|striptags('<h2><a>')}}
            </a>
        </h2>
        <p class="featuredText slideInfos">
            {{ article.dates|capitalize|striptags('<a><p>')}}
        </p>
        <p class="featuredText">
            {{ article.age|capitalize|striptags('<a><p>')}}
        </p>
    </div>
    {% endif %}
