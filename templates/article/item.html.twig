<article>
    <div>
        <div">
            {% if article.featuredImage %}
            <a href="{{ path('article_show', { 'slug': article.slug }) }}">
            {# CHANGER WIDTH ET HEIGHT POUR METTRE VARIABLE DEPUIS EASY ADMIN #}
                <img src="/uploads/{{ article.featuredImage.filename }}" alt="{{ article.featuredImage.altText }}" loading="lazy" width="200" height="180" >
            </a>
            {% endif %}
        </div>
        <div">
            <h2>
                <a href="{{ path('article_show', { 'slug': article.slug }) }}">
                    {{article.title|capitalize}}
                </a>
            </h2>
            <p>
                {{ article.createdAt|date('d M Y') }}
            </p>
            {{ article.featuredText ?: article.content|striptags|slice(0, 130 ~ '...')}}
        </div>
    </div>
</article>