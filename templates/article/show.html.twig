{% extends 'base.html.twig' %}
{# STRUCTURE DE CHAQUE ARTICLE EN DETAIL #}
{% block title %}
	{{article.title|capitalize}}
{% endblock %}

{% block body %}
	
	<div>
		<h1>{{article.title|striptags('<a><h1>')}}</h1>
		<hr>
		{% if article.featuredImage is not null and article.featuredImage.filename is not null %}
			<img src="/uploads/{{ article.featuredImage.filename|striptags }}" alt="{{ article.featuredImage.altText|striptags}}" loading="lazy" width="{{300}}" height="300">
		{% endif %}
		
		{{article.content|striptags}}
	</div>


{% endblock %}
